# Copy this file to .env and fill in your actual API keys
# NEVER commit your actual .env file to the repository!

# Database Configuration
PLEX_DB_PATH="C:\\Users\\[username]\\AppData\\Local\\Plex Media Server\\Plug-in Support\\Databases\\com.plexapp.plugins.library.db"

# TMDb API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_ACCESS_TOKEN=your_tmdb_access_token_here

# TheTVDB API Configuration
# Get your API key from: https://thetvdb.com/api-information
# If you have a user-supported (subscriber) key, you also need your subscriber PIN
THETVDB_API_KEY=your_thetvdb_api_key_here
THETVDB_SUBSCRIBER_PIN=your_subscriber_pin_here_or_leave_empty

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
SESSION_SECRET=generate_a_strong_random_string_here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
