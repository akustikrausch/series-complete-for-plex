{
  "name": "plex-series-checker-web",
  "version": "2.6.0",
  "description": "Cross-platform Plex Series Checker",
  "license": "CC-BY-NC-4.0",
  "main": "server-crossplatform.js",
  "scripts": {
    "start": "node server-crossplatform.js",
    "start-secure": "NODE_ENV=production node server-secure.js",
    "dev": "nodemon server-crossplatform.js",
    "dev-secure": "NODE_ENV=development nodemon server-secure.js",
    "test-apis": "node -e \"fetch('http://localhost:3000/api/test-apis').then(r=>r.json()).then(console.log).catch(console.error)\"",
    "lint": "eslint .",
    "security-check": "npm audit",
    "security-fix": "npm audit fix",
    "dependency-check": "npm outdated",
    "update-deps": "npm update",
    "security-test": "npm audit && npm run lint",
    "prod": "NODE_ENV=production node server-secure.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jspdf": "^3.0.2",
    "openai": "^4.20.0",
    "validator": "^13.15.15",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.0.1"
  }
}
